# GitHub Configuration
github_owner = "Edwinexd"
github_repo  = "dsv-prog2review"

# =============================================================================
# Infrastructure Secrets
# =============================================================================

# Base64-encode your kubeconfig: base64 -w0 ~/.kube/config
kubeconfig = ""

# WireGuard private key (from wg genkey or existing config)
wireguard_private_key = ""

# WireGuard config WITHOUT the PrivateKey line
# The workflow will inject the private key at runtime
wireguard_config = <<-EOT
[Interface]
Address = 10.0.0.2/32
DNS = 10.0.0.1

[Peer]
PublicKey = SERVER_PUBLIC_KEY_HERE
AllowedIPs = 0.0.0.0/0
Endpoint = vpn.example.com:51820
PersistentKeepalive = 25
EOT

# SSH private key for CI user
ssh_private_key = ""

# GitHub PAT with read:packages scope for pulling voice-grader images from ghcr.io
ghcr_pat = ""

# GitHub PAT for voice-grader to dispatch deploy on infra repo (needs repo scope or fine-grained actions:write)
deploy_pat = ""

# =============================================================================
# Application Secrets (generates k8s secrets.yaml automatically)
# =============================================================================

postgres_password = ""
auth_secret       = ""  # Generate with: openssl rand -base64 32
admin_usernames   = "admin_user1,admin_user2"
openai_api_key    = ""
